# Application Configuration
PORT=3000
APP_PORT=8000
NODE_ENV=production

# PostgreSQL Database Configuration
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=photoblog_db
POSTGRES_USER=photoblog_user
POSTGRES_PORT=5432

# Database Connection (Auto-generated from above variables)
# For Docker: postgresql://photoblog_user:change-this-password@db:5432/photoblog_db?schema=public
# For local: postgresql://photoblog_user:change-this-password@localhost:5432/photoblog_db?schema=public
DATABASE_URL=postgresql://photoblog_user:change-this-password@localhost:5432/photoblog_db?schema=public

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRATION=1h

# Docker Image (change to your Docker Hub username)
DOCKER_IMAGE=yourusername/photoblog:latest
